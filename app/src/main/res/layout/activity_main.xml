<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.example.android.restop.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/category_staromestska"
        android:text="@string/category_staromestska"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />


    <TextView
        android:id="@+id/modrany"
        style="@style/CategoryStyle"
        android:background="@color/category_modrany"
        android:text="@string/category_modrany"/>


    <TextView
        android:id="@+id/podbaba"
        style="@style/CategoryStyle"
        android:background="@color/category_podbaba"
        android:text="@string/category_podbaba" />

    <TextView
        android:id="@+id/branik"
        style="@style/CategoryStyle"
        android:background="@color/category_branik"
        android:text="@string/category_branik" />

</LinearLayout>
