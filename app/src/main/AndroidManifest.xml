<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.restop">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.restop.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.restop.ModranyActivity"
            android:label="@string/category_modrany"
            android:parentActivityName="com.example.android.restop.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.restop.MainActivity"/>
        </activity>
        <activity
            android:name="com.example.android.restop.PodbabaActivity"
            android:label="@string/category_podbaba"
            android:parentActivityName="com.example.android.restop.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.restop.MainActivity"/>
        </activity>
        <activity
            android:name="com.example.android.restop.BranikActivity"
            android:label="@string/category_branik"
            android:parentActivityName="com.example.android.restop.MainActivity">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.restop.MainActivity"/>
        </activity>
    </application>

</manifest>
